<div class="container">
  <div class="row text-center">
    <div class="col-sm-6 col-md-offset-3">
      <h1>Edit your animal!</h1>

      <!-- <form action="/animals/<%= @animal.id %>" method="post">
        <input name="_method" type="hidden" value="put">
        <%= token_tag form_authenticity_token %>
        <input type="text" name="animal[name]" placeholder="Name" value="<%= @animal.name %>">
        <input type="text" name="animal[species]" placeholder="Species" value="<%= @animal.species %>">
        <textarea name="animal[description]" placeholder="Description"><%= @animal.description %></textarea>
        <input type="submit" value="Update Animal">
      </form> -->

      <%= form_for @animal do |f| %>
        
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <br>
        <div>
          <%= f.label :species %><br>
          <%= f.text_field :species, class: "form-control" %>
        </div>
        <br>
        <div>
          <%= f.label :description %><br>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <br>
        <div>
          <p>Exhibit</p>
          <%= f.select(:exhibit_id, [['Asia', 8], ['Birdland', 6], ['The Desert', 2], ['Down Under', 10], ['Fantasy Forest', 1], ['The Farm', 12], ['The Jungle', 7], ['Oceanlandia', 9], ['Reptile City', 11], ['Savanna', 4], ['South America', 5], ['The Town', 3]]) %>
        </div>
        <br>
        <div>
          <%= image_tag @animal.image.url(:small) %><br><br>
          <center><%= f.file_field :image, class: "form-control" %></center>
        </div>
        <br>
        <div>
          <%= f.submit class: "btn btn-sm" "Update Animal" %>
          <button class="btn btn-sm"><%= link_to 'Cancel', animal_path(@animal) %></button>
        </div>

      <% end %>
    </div> 
  </div>
</div>