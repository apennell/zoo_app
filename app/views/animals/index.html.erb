<div class="container">

  <h1 class="text-center">Welcome to the Zoo!!!!</h1>
<hr>
    <div class="row">  
      <% @animals.each do |animal| %>


          <div class="col-md-4">
            <h3><a href="/animals/<%= animal.id %>"><strong><%= animal.name %></strong></a></h3>
            <p>
              <i>Species: <%= animal.species %></i><br>
              Description: <%= animal.description %>
            </p>
          </div>
        
      <% end %>
    </div>
</div>
