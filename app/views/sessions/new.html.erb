  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Login</h3>
      <%= form_tag '/login' do %>

        Email: <%= text_field_tag :email %>
        Password: <%= password_field_tag :password %>
        <%= submit_tag "Submit" %>

      <% end %>
    </div>
  </div>
</div>